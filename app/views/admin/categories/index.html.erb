<div class="container">
	<div class="row">
		<div class="col-md-4 offset-md-4">
			<h2>カテゴリー一覧</h2><br>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 offset-md-4">
			<%= form_for(@category, url: admin_categories_path) do |f| %>
		  		<% if @category.errors.any? %>
		  			<div id="error_explanation">
            			<h2><%= @category.errors.count %>件のエラーが発生しました。</h2>
            			<ul>
              				<% @category.errors.full_messages.each do |message| %>
              					<li><%= message %></li>
              				<% end %>
            			</ul>
          			</div>
          		<% end %>
          		<p style="display: inline-block;">カテゴリー</p>
          		<%= f.text_field :name %>
          		<%= f.submit "新規追加登録", class:"btn btn-info" %>
          	<% end %>
		</div>
	</div><br>
	<div class="row">
		<div class="col-md-10 offset-md-2">
			<table class="table table-hover table-primary">
				<thead>
					<tr>
						<th>カテゴリー名</th>
						<th>投稿数</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @categories.each do |category| %>
						<tr>
							<td><%= category.name %></td>
							<% examples = Example.where(category_id: "category_id" ) %>
							<td><%= examples.count %></td>
							<td><%= link_to "編集する", edit_admin_category_path(category),class:"btn btn-info" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>