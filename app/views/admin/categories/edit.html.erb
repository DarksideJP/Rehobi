<div class="container">
	<div class="row">
		<div class="col-md-4 offset-md-4">
			<h2>カテゴリー編集</h2><br>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 offset-md-4">
			<h3>カテゴリー名</h3>
			<%= form_for(@category, url: admin_category_path) do |f| %>
		    	<% if @category.errors.any? %>
          			<div id="error_explanation">
            			<h2><%= @category.errors.count %>件のエラーが発生しました。</h2>
              			<ul>
              				<% @category.errors.full_messages.each do |message| %>
              					<li><%= message %></li>
              				<% end %>
              			</ul>
          			</div>
        		<% end %>
        		<%= f.text_field :name %>
        		<%= f.submit "更新", class:"btn btn-info" %>
        		<%= link_to "削除", admin_category_path, method: :delete, class:"btn btn-danger" %>
        	<% end %>
        </div>
    </div>
</div>
