<body class="sign_up">
  <div class="container">
    <div class="row margin-ud">
      <div class="col-md-6 offset-md-3 form-bg">
        <div class="row">
          <div class="col-md-9 offset-md-3 margin-ud">
            <h2 class="green">新規会員登録</h2>
          </div>
        </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="row">
              <div class="form-group">
                <div class="field">
                  <div style="display: inline-flex;">
                    <div class="col-md-1 offset-md-1">
                      <i class="fas fa-user"></i>
                    </div>
                    <div class="col-md-4">
                      <%= f.text_field :last_name, placeholder:"姓" %>
                    </div>
                    <div class="col-md-4 offset-md-1">
                      <%= f.text_field :first_name, placeholder:"名" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="field">
                  <div style="display: inline-flex;">
                    <div class="col-md-1 offset-md-1">
                      <i class="fas fa-user"></i>
                    </div>
                    <div class="col-md-4">
                      <%= f.text_field :last_name_kana, placeholder:"セイ" %>
                    </div>
                    <div class="col-md-4 offset-md-1">
                      <%= f.text_field :first_name_kana, placeholder:"メイ" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="field">
                  <div style="display: inline-flex;">
                    <div class="col-md-1 offset-md-2">
                      <i class="fas fa-envelope"></i>
                    </div>
                    <div class="col-md-12">
                      <%= f.email_field :email, autocomplete: "email",placeholder:"メールアドレス", class:"btn-block" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="field">
                  <div style="display: inline-flex;">
                    <div class="col-md-1 offset-md-2">
                      <i class="fas fa-phone"></i>
                    </div>
                    <div class="col-md-8">
                      <%= f.phone_field :phone_number,placeholder:"電話番号" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="field">
                  <div style="display: inline-flex;">
                    <div class="col-md-1 offset-md-2">
                      <i class="fas fa-tenge"></i>
                    </div>
                    <div class="col-md-8">
                      <%= f.text_field :zip_code,placeholder:"郵便番号" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="field">
                  <div style="display: inline-flex;">
                    <div class="col-md-1 offset-md-2">
                      <i class="fas fa-home"></i>
                    </div>
                    <div class="col-md-12">
                      <%= f.text_field :address,placeholder:"住所", class:"btn-block" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="field">
                  <div style="display: inline-flex;">
                    <div class="col-md-1 offset-md-2">
                      <i class="fas fa-lock"></i>
                    </div>
                    <div class="col-md-8">
                      <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワード(6文字以上)" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <div class="field">
                  <div style="display: inline-flex;">
                    <div class="col-md-1 offset-md-2">
                      <i class="fas fa-lock"></i>
                    </div>
                    <div class="col-md-8">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード確認" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-8 offset-md-2">
                <%= f.submit "登録", class:" white btn btn-outline-primary btn-success btn-block" %>
                <div class="form-group"></div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</body>