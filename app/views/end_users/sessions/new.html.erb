<body class="sign_up">
  <div class="container">
    <div class="row margin-ud">
      <div class="col-md-6 offset-md-3 form-bg">
        <div class="row">
          <div class="col-md-9 offset-md-3 margin-ud">
            <h2 class="green">ログイン</h2>
          </div>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row">
            <div class="form-group">
              <div class="field">
                <div style="display: inline-flex;">
                  <div class="col-md-1 offset-md-4">
                    <i class="fas fa-envelope"></i>
                  </div>
                  <div class="col-md-12">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス", class:"btn-block" %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <div class="field">
                <div style="display: inline-flex;">
                  <div class="col-md-1 offset-md-4">
                    <i class="fas fa-lock"></i>
                  </div>
                  <div class="col-md-8">
                    <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8 offset-md-3">
              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :"ログインしたままにする" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-8 offset-md-2">
              <div class="actions">
                <%= f.submit "Log in", class:" white btn btn-outline-primary btn-success btn-block" %>
              </div>
            </div>
          </div>
        <% end %>

        <br><%= render "end_users/shared/links" %><br>

      </div>
    </div>
  </div>
</body>
